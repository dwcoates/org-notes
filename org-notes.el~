(defvar org-note-accepted-tasks '("NOTE" "LEARN" "REVIEW" "BUG" "ISSUE" "FEATURE"))

(defun org-id-locations-load-advice (funct &rest args)
  "`org-id-locations-load' advice updating `org-note-locations' w/ FUNCT and ARGS."
  (funcall funct args)
  (setq org-note-locations
        (mapcar
         (lambda (id)
           (let  ((addr (org-id-find id)))
             (when addr
               (with-current-buffer
                   (org-get-agenda-file-buffer (car addr))
                 (goto-char (cdr addr))
                 (cons (org-get-heading) id)
                 ))))
         (mapcar 'cadr (org-id-hash-to-alist org-id-locations)))))

(advice-add 'org-id-locations-load :around 'org-id-locations-load-advice)
